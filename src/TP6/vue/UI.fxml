<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
			fx:controller="TP6.controleur.UIControleur">
	<top>
		<ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
			<Label text="Équation :"/>
			<TextField fx:id="eqField" onAction="#onEquationChanged">
				<tooltip><Tooltip text="L'équation de la fonction à afficher." /></tooltip>
			</TextField>
			<Label text="Nombre de points :"/>
			<TextField fx:id="nbField" onAction="#onNbPtsEquationChanged"/>
			<Label text="Polaire ?"/>
			<CheckBox fx:id="polarBox" onAction="#onPolarBox" />
			<Label text="Xmin :"/>
			<TextField fx:id="xminField" onAction="#onXminChanged"/>
			<Label text="Xmax :"/>
			<TextField fx:id="xmaxField" onAction="#onXmaxChanged"/>
		</ToolBar>
	</top>
   <center>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
          <Tab text="Pie">
			  <PieChart fx:id="pie" />
		  </Tab>
		  <Tab text="Graph">
				  <ScatterChart fx:id="curve" legendVisible="false">
					  <xAxis>
						  <NumberAxis autoRanging="false" label="X" lowerBound="-50" upperBound="50" />
					  </xAxis>
					  <yAxis>
						  <NumberAxis autoRanging="false" label="Y" lowerBound="-50" upperBound="50" />
					  </yAxis>
				  </ScatterChart>
		  </Tab>
      </TabPane>
   </center>
</BorderPane>
